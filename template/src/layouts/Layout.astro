---
const { title = "Kickstart" } = Astro.props;
import "../styles/main.scss";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Cabin:ital,wdth,wght@0,75..100,400..700;1,75..100,400..700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="site-wrapper owl-32">
    {
      Astro.slots.has("header") && (
        <header class="layout-wide" aria-label="Site header">
          <slot name="header" />
        </header>
      )
    }

    <slot name="main" />

    {
      Astro.slots.has("footer") && (
        <footer class="layout-wide" aria-label="Site footer">
          <slot name="footer" />
        </footer>
      )
    }

    <!-- <script type="module" src="/src/main.js"></script> -->
  </body>
</html>

<style lang="scss"></style>
