---
// Layout component with built-in accessibility features:
// - Skip link for keyboard navigation
// - Proper semantic structure
// - Screen reader support

import { asset } from "../utils/assets";

interface Props {
  title?: string;
}

const { title = "Kickstart" } = Astro.props as Props;
import "../styles/main.scss";
// TODO: Re-enable tomorrow - Swiper CSS causing build issues
// import "../styles/swiper-imports.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href={asset("favicon.svg")} />

    <!-- Icon Font -->
    <link rel="stylesheet" href={asset("icons/font/font-icons.css")} />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Cabin:ital,wdth,wght@0,75..100,400..700;1,75..100,400..700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="site-wrapper owl-32">
    <!-- Skip Link for Accessibility -->
    <a href="#main" class="skip-link">Skip to main content</a>

    {
      Astro.slots.has("header") && (
        <header class="layout-wide" aria-label="Site header">
          <slot name="header" />
        </header>
      )
    }

    <slot name="main" />

    {
      Astro.slots.has("footer") && (
        <footer class="layout-wide" aria-label="Site footer">
          <slot name="footer" />
        </footer>
      )
    }
  </body>
</html>

<script>
  // Import component JavaScript on the client side
  import "../main.js";
</script>

<style lang="scss">
  // Skip Link Styles
  .skip-link {
    position: absolute;
    top: -100px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 9999;
    padding: 0.75rem 1.5rem;
    background: #1a1a1a;
    color: #ffffff;
    text-decoration: none;
    font-weight: 600;
    border-radius: 0.375rem;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    transition: top 0.3s ease-in-out;

    &:focus,
    &:focus-visible {
      top: 1rem;
      outline: 2px solid #3b82f6;
      outline-offset: 2px;
    }

    &:hover:focus {
      background: #333333;
    }
  }
</style>
