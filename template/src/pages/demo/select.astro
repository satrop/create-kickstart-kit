---
import Layout from "@/layouts/Layout.astro";
import SelectComponent from "@/components/Select/Select.astro";
import Button from "@/components/Button/Button.astro";

import DemoNavigation from "../../components/DemoNavigation/DemoNavigation.astro";
import { getFormComponentNavigation } from "../../utils/demoNavigation";
import "@/styles/demo.scss";

// Get navigation items with current page marked as active
const navigationItems = getFormComponentNavigation("select");
---

<Layout title="Select Component">
  <Fragment slot="main">
    <main id="main" class="layout-main" aria-label="Main content">
      <div class="section-grid owl-32">
        <DemoNavigation title="Form Components" items={navigationItems} />
        <div class="col-4 md:col-4 lg:col-9">
          <div class="component-demo">
            <section class="demo-section">
              <div class="section-grid">
                <div class="col-full">
                  <h2>Basic Usage</h2>
                  <p>A simple select dropdown with options.</p>

                  <div class="demo-example">
                    <div class="demo-preview contain-floats">
                      <form class="demo-form">
                        <SelectComponent
                          name="country"
                          label="Country"
                          placeholder="Select your country"
                          options={[
                            { value: "us", label: "United States" },
                            { value: "ca", label: "Canada" },
                            { value: "uk", label: "United Kingdom" },
                            { value: "au", label: "Australia" },
                            { value: "de", label: "Germany" },
                            { value: "fr", label: "France" },
                            { value: "jp", label: "Japan" },
                          ]}
                        />
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </section>

            <section class="demo-section">
              <div class="section-grid">
                <div class="col-full">
                  <h2>With Help Text</h2>
                  <p>Select component with additional guidance.</p>

                  <div class="demo-example">
                    <div class="demo-preview contain-floats">
                      <form class="demo-form">
                        <SelectComponent
                          name="priority"
                          label="Priority Level"
                          helpText="Choose the urgency level for your support request"
                          value="medium"
                          options={[
                            { value: "low", label: "Low - General inquiry" },
                            { value: "medium", label: "Medium - Standard support" },
                            { value: "high", label: "High - Urgent issue" },
                            { value: "critical", label: "Critical - System down" },
                          ]}
                        />
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </section>

            <section class="demo-section">
              <div class="section-grid">
                <div class="col-full">
                  <h2>Required Field</h2>
                  <p>Select component with required validation.</p>

                  <div class="demo-example">
                    <div class="demo-preview contain-floats">
                      <form class="demo-form">
                        <SelectComponent
                          name="category"
                          label="Product Category"
                          placeholder="Choose a category"
                          required={true}
                          options={[
                            { value: "electronics", label: "Electronics" },
                            { value: "clothing", label: "Clothing & Accessories" },
                            { value: "home", label: "Home & Garden" },
                            { value: "sports", label: "Sports & Recreation" },
                            { value: "books", label: "Books & Media" },
                            { value: "health", label: "Health & Beauty" },
                          ]}
                        />
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </section>

            <section class="demo-section">
              <div class="section-grid">
                <div class="col-full">
                  <h2>With Disabled Options</h2>
                  <p>Select with some options disabled.</p>

                  <div class="demo-example">
                    <div class="demo-preview contain-floats">
                      <form class="demo-form">
                        <SelectComponent
                          name="plan"
                          label="Subscription Plan"
                          helpText="Premium plans are currently at capacity"
                          value="basic"
                          options={[
                            { value: "free", label: "Free - Limited features" },
                            { value: "basic", label: "Basic - $9/month" },
                            { value: "pro", label: "Pro - $19/month" },
                            { value: "premium", label: "Premium - $39/month", disabled: true },
                            { value: "enterprise", label: "Enterprise - Contact sales", disabled: true },
                          ]}
                        />
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </section>

            <section class="demo-section">
              <div class="section-grid">
                <div class="col-full">
                  <h2>Multiple Selection</h2>
                  <p>Select component allowing multiple choices.</p>

                  <div class="demo-example">
                    <div class="demo-preview contain-floats">
                      <form class="demo-form">
                        <SelectComponent
                          name="skills"
                          label="Technical Skills"
                          helpText="Select all skills that apply to you"
                          multiple={true}
                          options={[
                            { value: "javascript", label: "JavaScript" },
                            { value: "typescript", label: "TypeScript" },
                            { value: "react", label: "React" },
                            { value: "vue", label: "Vue.js" },
                            { value: "angular", label: "Angular" },
                            { value: "node", label: "Node.js" },
                            { value: "python", label: "Python" },
                            { value: "java", label: "Java" },
                            { value: "csharp", label: "C#" },
                            { value: "php", label: "PHP" },
                          ]}
                        />
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </section>

            <section class="demo-section">
              <div class="section-grid">
                <div class="col-full">
                  <h2>Error State</h2>
                  <p>Select component with validation error.</p>

                  <div class="demo-example">
                    <div class="demo-preview contain-floats">
                      <form class="demo-form">
                        <SelectComponent
                          name="timezone"
                          label="Time Zone"
                          placeholder="Select your timezone"
                          required={true}
                          error="Please select your time zone to complete your profile"
                          options={[
                            { value: "utc-12", label: "(UTC-12:00) International Date Line West" },
                            { value: "utc-11", label: "(UTC-11:00) Coordinated Universal Time-11" },
                            { value: "utc-10", label: "(UTC-10:00) Hawaii" },
                            { value: "utc-9", label: "(UTC-09:00) Alaska" },
                            { value: "utc-8", label: "(UTC-08:00) Pacific Time (US & Canada)" },
                            { value: "utc-7", label: "(UTC-07:00) Mountain Time (US & Canada)" },
                            { value: "utc-6", label: "(UTC-06:00) Central Time (US & Canada)" },
                            { value: "utc-5", label: "(UTC-05:00) Eastern Time (US & Canada)" },
                          ]}
                        />
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </section>

            <section class="demo-section">
              <div class="section-grid">
                <div class="col-full">
                  <h2>Disabled State</h2>
                  <p>Select component in a disabled state.</p>

                  <div class="demo-example">
                    <div class="demo-preview contain-floats">
                      <form class="demo-form">
                        <SelectComponent
                          name="shipping-method"
                          label="Shipping Method"
                          value="standard"
                          disabled={true}
                          helpText="Shipping method is determined by your location"
                          options={[
                            { value: "standard", label: "Standard Shipping - $5.99" },
                            { value: "express", label: "Express Shipping - $12.99" },
                            { value: "overnight", label: "Overnight Shipping - $24.99" },
                          ]}
                        />
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </section>

            <section class="demo-section">
              <div class="section-grid">
                <div class="col-full">
                  <h2>Complete Form Example</h2>
                  <p>Select components used within a complete form context.</p>

                  <div class="demo-example">
                    <div class="demo-preview contain-floats">
                      <form class="demo-form demo-form--complete">
                        <div class="form-section">
                          <h3>Account Settings</h3>

                          <div class="form-row">
                            <SelectComponent
                              name="language"
                              label="Preferred Language"
                              value="en"
                              options={[
                                { value: "en", label: "English" },
                                { value: "es", label: "Español" },
                                { value: "fr", label: "Français" },
                                { value: "de", label: "Deutsch" },
                                { value: "it", label: "Italiano" },
                                { value: "pt", label: "Portuguese" },
                              ]}
                            />

                            <SelectComponent
                              name="currency"
                              label="Currency"
                              value="usd"
                              options={[
                                { value: "usd", label: "USD - US Dollar" },
                                { value: "eur", label: "EUR - Euro" },
                                { value: "gbp", label: "GBP - British Pound" },
                                { value: "cad", label: "CAD - Canadian Dollar" },
                                { value: "aud", label: "AUD - Australian Dollar" },
                              ]}
                            />
                          </div>

                          <SelectComponent
                            name="notifications"
                            label="Email Notifications"
                            helpText="Choose which email notifications you'd like to receive"
                            multiple={true}
                            options={[
                              { value: "account", label: "Account updates" },
                              { value: "security", label: "Security alerts" },
                              { value: "newsletter", label: "Newsletter" },
                              { value: "promotions", label: "Promotions & offers" },
                              { value: "product", label: "Product updates" },
                            ]}
                          />
                        </div>

                        <div class="form-actions">
                          <Button variant="secondary" type="button">Reset</Button>
                          <Button variant="primary" type="submit">Save Settings</Button>
                        </div>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </section>

            <!-- Accessibility Features -->
            <section class="demo-section">
              <div class="section-grid">
                <div class="col-full">
                  <h2>Accessibility Features</h2>
                  <p class="section-intro">Built-in accessibility support for inclusive user experiences.</p>
                </div>
              </div>

              <div class="section-grid">
                <div class="col-full">
                  <div class="accessibility-grid">
                    <div class="accessibility-item">
                      <h4>Keyboard Navigation</h4>
                      <ul>
                        <li><kbd>Tab</kbd> - Focus select element</li>
                        <li><kbd>Arrow Keys</kbd> - Navigate through options</li>
                        <li><kbd>Enter</kbd> / <kbd>Space</kbd> - Open dropdown</li>
                        <li><kbd>Escape</kbd> - Close dropdown</li>
                        <li><kbd>Type</kbd> - Type-ahead search</li>
                      </ul>
                    </div>

                    <div class="accessibility-item">
                      <h4>Screen Reader Support</h4>
                      <ul>
                        <li>Native select element for best compatibility</li>
                        <li>Proper label-input association</li>
                        <li>Help text linked with <code>aria-describedby</code></li>
                        <li>Error state indicated with <code>aria-invalid</code></li>
                        <li>Required field announcements</li>
                      </ul>
                    </div>

                    <div class="accessibility-item">
                      <h4>Visual Indicators</h4>
                      <ul>
                        <li>Clear focus indicators</li>
                        <li>Selected option highlighting</li>
                        <li>Disabled state styling</li>
                        <li>Error state visual feedback</li>
                        <li>Loading states for dynamic options</li>
                      </ul>
                    </div>
                  </div>
                </div>
              </div>
            </section>
          </div>
        </div>
      </div>
    </main>
  </Fragment></Layout
>
