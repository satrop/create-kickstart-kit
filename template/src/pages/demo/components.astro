---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Component Library">
  <Fragment slot="main">
    <main id="main" class="layout-main" aria-label="Main content">
      <div class="components-hub">
        <header class="hub-header">
          <div class="section-grid">
            <div class="col-full">
