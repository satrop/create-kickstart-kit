---
import Layout from "../../layouts/Layout.astro";
import Card from "../../components/Card";
---

<Layout title="Astro Kickstart - Template Demo">
  <Fragment slot="main">
    <main id="main" class="layout-main" aria-label="Main content">
      <div class="homepage">
        <section class="hero">
          <div class="section-grid">
            <div class="col-full">
              <div class="hero__content">
                <h1>Astro Kickstart</h1>
                <p class="hero__subtitle">
                  A minimal, accessible, and highly customizable Astro starter template with a focus on utility-first
                  styling and reusable components.
                </p>
                <div class="hero__actions">
                  <a href="./components.html" class="btn btn--outline btn--medium">View Components</a>
                  <a href="./grid.html" class="btn btn--outline btn--medium">Explore Grid System</a>
                  <a href="./colors.html" class="btn btn--outline btn--medium">Color System</a>
                  <a href="./typography.html" class="btn btn--outline btn--medium">Typography</a>
                </div>
              </div>
            </div>
          </div>
        </section>

        <section class="features">
          <div class="section-grid">
            <div class="col-full">
              <h2 class="features__title">Features</h2>
            </div>

            <div class="col-4 md:col-4 lg:col-4">
              <Card variant="bordered">
                <Fragment slot="header">
                  <h3>üé® Minimal Design</h3>
                </Fragment>
                <p>
                  Clean, minimal styling that's easy to customize. Each component uses predictable class names and
                  minimal CSS for maximum flexibility.
                </p>
              </Card>
            </div>

            <div class="col-4 md:col-4 lg:col-4">
              <Card variant="bordered">
                <Fragment slot="header">
                  <h3>‚ôø Accessible First</h3>
                </Fragment>
                <p>
                  All components follow WCAG guidelines with proper ARIA attributes, semantic HTML, keyboard navigation,
                  and focus management built-in.
                </p>
              </Card>
            </div>

            <div class="col-4 md:col-4 lg:col-4">
              <Card variant="bordered">
                <Fragment slot="header">
                  <h3>üì± Responsive Grid</h3>
                </Fragment>
                <p>
                  Flexible 12-column CSS Grid system with mobile-first responsive design. Supports complex layouts with
                  easy-to-use utility classes.
                </p>
              </Card>
            </div>

            <div class="col-4 md:col-4 lg:col-4">
              <Card variant="bordered">
                <Fragment slot="header">
                  <h3>üß© Modular Components</h3>
                </Fragment>
                <p>
                  Self-contained components with no dependencies. Use what you need, remove what you don't. Each
                  component is designed for easy customization.
                </p>
              </Card>
            </div>

            <div class="col-4 md:col-4 lg:col-4">
              <Card variant="bordered">
                <Fragment slot="header">
                  <h3>‚ö° Performance Focused</h3>
                </Fragment>
                <p>
                  Optimized for speed with minimal CSS footprint, tree-shaking support, and efficient component
                  architecture that scales with your project.
                </p>
              </Card>
            </div>

            <div class="col-4 md:col-4 lg:col-4">
              <Card variant="bordered">
                <Fragment slot="header">
                  <h3>üõ†Ô∏è Developer Friendly</h3>
                </Fragment>
                <p>
                  TypeScript support, clear documentation, and intuitive APIs. Built with modern best practices and
                  developer experience in mind.
                </p>
              </Card>
            </div>
          </div>
        </section>
      </div>
    </main>
  </Fragment>

  <style lang="scss">
    @use "../../styles/core/owl.core" as owl;
    @use "../../styles/core/spacing.core" as spacing;

    .homepage {
      min-height: 100vh;
    }

    /* Button styles for anchor links */
    .btn {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      border: 1px solid transparent;
      border-radius: 4px;
      cursor: pointer;
      font-family: inherit;
      font-weight: 500;
      text-decoration: none;
      transition: all 0.2s ease;
      padding: 0.75rem 1.5rem;

      &:focus {
        outline: 2px solid #007bff;
        outline-offset: 2px;
      }

      &--primary {
        background-color: #007bff;
        border-color: #007bff;
        color: white;

        &:hover {
          background-color: #0056b3;
          border-color: #0056b3;
        }
      }

      &--outline {
        background-color: transparent;
        border-color: #007bff;
        color: #007bff;

        &:hover {
          background-color: #007bff;
          color: white;
        }
      }

      &--medium {
        padding: 0.75rem 1.5rem;
        font-size: 1rem;
      }
    }

    .hero {
      padding: 4rem 0;
      text-align: center;

      &__content {
        max-width: 800px;
        margin: 0 auto;
      }

      h1 {
        font-size: 3rem;
        margin-bottom: 1rem;
        color: #333;
        font-weight: 700;
      }

      &__subtitle {
        font-size: 1.25rem;
        color: #666;
        margin-bottom: 2rem;
        line-height: 1.6;
      }

      &__actions {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
      }
    }

    .features {
      padding: 4rem 0;
      background-color: #f8f9fa;

      @include spacing.spacing(padding, 32);

      &__title {
        text-align: center;
        font-size: 2.5rem;
        margin-bottom: 3rem;
        color: #333;
      }

      .section-grid {
        @include owl.owl(margin-bottom, 32);
      }
    }

    .getting-started {
      padding: 4rem 0;

      &__content {
        text-align: center;

        p {
          font-size: 1.125rem;
          line-height: 1.6;
          margin-bottom: 2rem;
          color: #666;
        }
      }

      &__links {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
      }
    }

    /* Responsive adjustments */
    @media (max-width: 768px) {
      .hero {
        padding: 2rem 0;

        h1 {
          font-size: 2rem;
        }

        &__subtitle {
          font-size: 1.125rem;
        }

        &__actions {
          flex-direction: column;
          align-items: center;
        }
      }

      .features {
        padding: 2rem 0;

        &__title {
          font-size: 2rem;
          margin-bottom: 2rem;
        }
      }

      .getting-started {
        padding: 2rem 0;

        &__links {
          flex-direction: column;
          align-items: center;
        }
      }
    }
  </style>
</Layout>
