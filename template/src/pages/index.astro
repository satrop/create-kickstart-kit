---
import Layout from "@/layouts/Layout.astro";
---

<Layout title="Welcome to Your New Project">
  <Fragment slot="main">
    <main id="main" class="layout-main" aria-label="Main content">
      <div class="welcome-page">
        <section class="hero">
          <div class="section-grid">
            <div class="col-full">
              <div class="hero__content">
                <h1>Welcome to Your New Project</h1>
                <p class="hero__subtitle">
                  This is your new Astro project built with the Kickstart template. Replace this page with your own
                  content to get started.
                </p>
                <div class="hero__actions">
                  <a href="./demo/homepage-demo.html" class="btn btn--primary btn--medium">View Template Demo</a>
                  <a href="./demo/components.html" class="btn btn--outline btn--medium">Browse Components</a>
                </div>
              </div>
            </div>
          </div>
        </section>

        <section class="resources">
          <div class="section-grid">
            <div class="col-full">
              <h2>Template Resources</h2>
              <div class="resources__grid">
                <a href="./demo/navigation.html" class="resources__item">
                  <h3>🧭 Standard Navigation</h3>
                  <p>Classic dropdown navigation with hover and click interactions.</p>
                </a>
                <a href="./demo/complete-navigation.html" class="resources__item">
                  <h3>📱 Complete Navigation System</h3>
                  <p>Advanced mega menu with mobile accordion - full responsive navigation.</p>
                </a>
                <a href="./demo/components.html" class="resources__item">
                  <h3>📋 Components</h3>
                  <p>Explore all available UI components with usage examples.</p>
                </a>
                <a href="./demo/colors.html" class="resources__item">
                  <h3>🎨 Colors</h3>
                  <p>View the color system and customization options.</p>
                </a>
                <a href="./demo/grid.html" class="resources__item">
                  <h3>📐 Grid System</h3>
                  <p>Learn about the responsive grid system and layout utilities.</p>
                </a>
                <a href="./demo/typography.html" class="resources__item">
                  <h3>🆎 Typography</h3>
                  <p>Typography system with font sizes, weights, and utility classes.</p>
                </a>
                <a href="./demo/icons.html" class="resources__item">
                  <h3>🔤 Icons</h3>
                  <p>Custom icon font with scalable vector icons for your interface.</p>
                </a>
              </div>
            </div>
          </div>
        </section>
      </div>
    </main>
  </Fragment>
</Layout>
