---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Home Page">
  <Fragment slot="header">
    <section class="layout-wide box-outline-purple">
      <div class="section-grid">
        <div class="col-full">
          <p>Header - Layout Wide</p>
        </div>
      </div>
    </section>
  </Fragment>

  <Fragment slot="main">
    <section class="layout-main box-outline-red">
      <div class="section-grid stack-16">
        <div class="col-full">
          <p>Main - Layout main</p>
        </div>
        <div class="col-4 md:col-8 lg:col-4 bg-red-300">
          <code>col-4 md:col-8 lg:col-4 bg-red-300</code>
        </div>
        <div class="col-4 md:col-8 lg:col-8 bg-yellow-300">
          <code>col-4 md:col-8 lg:col-8 bg-yellow-300</code>
        </div>
        <div class="col-4 md:col-8 lg:col-start-5-span-8 bg-peach-300 text-gray-300">
          <code>col-4 md:col-8 lg:col-start-5-span-8 bg-peach-300 text-gray-300</code>
        </div>

        <div class="col-4 md:col-4 lg:col-4 bg-red-300">
          <code>col-4 md:col-8 lg:col-4 bg-red-300</code>
        </div>
        <div class="col-4 md:col-4 lg:col-8 bg-yellow-300">
          <code>col-4 md:col-8 lg:col-8 bg-yellow-300</code>
        </div>
      </div>
    </section>

    <section class="layout-breakout-left box-outline-blue">Breakout Left</section>

    <section class="layout-main box-outline-red">Main - Layout main</section>

    <section class="layout-breakout-right box-outline-orange">Breakout Right</section>

    <section class="layout-full box-outline-green">Layout Full</section>
  </Fragment>

  <!-- <Fragment slot="footer">
    <section class="layout-wide box-outline-purple">
      <div class="section-grid">
        <div class="col-full">
          <p>Footer - Layout Wide</p>
        </div>
      </div>
    </section>
  </Fragment> -->

  <style lang="scss">
    @use "../styles/abstracts" as *;

    .stack-16 {
      @include stack(16);
    }
  </style>
</Layout>
