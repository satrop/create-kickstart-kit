---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Home Page">
  <Fragment slot="header">
    <section class="box-outline-purple">
      <p>Layout Wide - Used for Navigation and Footer</p>
    </section>
  </Fragment>

  <Fragment slot="main">
    <main class="layout-main" aria-label="Main content">
      <section class="box-outline-red">
        <div class="section-grid stack-16">
          <div class="col-full">
            <p>Main - Layout main</p>
          </div>

          <div class="col-4 md:col-4 lg:col-4 box-blue"><code>col-4 md:col-4 lg:col-4 box-blue</code></div>
          <div class="col-4 md:col-4 lg:col-8 box-blue"><code>col-4 md:col-4 lg:col-8 box-blue</code></div>

          <div class="col-4 md:col-4 lg:col-8 box-blue"><code>col-4 md:col-4 lg:col-8 box-blue</code></div>
          <div class="col-4 md:col-4 lg:col-4 box-blue"><code>col-4 md:col-4 lg:col-4 box-blue</code></div>

          <div class="col-4 md:col-4 lg:col-4 box-blue"><code>col-4 md:col-4 lg:col-4 box-blue</code></div>
          <div class="col-4 md:col-4 lg:col-4 box-blue"><code>col-4 md:col-4 lg:col-4 box-blue</code></div>
          <div class="col-4 md:col-4 lg:col-4 box-blue"><code>col-4 md:col-4 lg:col-4 box-blue</code></div>

          <div class="col-4 md:col-4 lg:col-start-5-span-4 box-blue">
            <code>col-4 md:col-4 lg:col-start-5-span-4 box-blue</code>
          </div>

          <div class="col-4 md:col-4 lg:col-start-5-span-4 box-blue">
            <code>col-4 md:col-4 lg:col-start-5-span-4 box-blue</code>
          </div>
          <div class="col-4 md:col-4 lg:col-4 box-blue"><code>col-4 md:col-4 lg:col-4 box-blue</code></div>
        </div>
      </section>
    </main>

    <section class="layout-breakout-left box-outline-blue"><p>Breakout Left</p></section>

    <section class="layout-breakout-right box-outline-blue">
      <div class="section-grid">
        <div class="col-4 md:col-4 lg:col-start-5-span-8 box-outline-pink">
          <p>Breakout Right</p>
        </div>
      </div>
    </section>

    <section class="layout-full box-outline-green">Layout Full</section>
  </Fragment>

  <Fragment slot="footer">
    <section class="layout-wide box-outline-purple">
      <div class="section-grid">
        <div class="col-4 md:col-4 lg:col-start-5-span-4">
          <p>Layout Wide - Used for Navigation and Footer</p>
        </div>
      </div>
    </section>
  </Fragment>

  <style lang="scss">
    section {
      margin-bottom: 30px;
    }
  </style>
</Layout>
