---

<Layout title="Component Showcase">
  <Fragment slot="header">
    <!-- <Navigation items={navItems} /> -->
  </Fragment>

  <Fragment slot="main">
    <main class="layout-main" aria-label="Main content">
      <div class="showcase">
        <div class="showcase__intro">
          <h1>Component Showcase</h1>
          <p>
            This page demonstrates the basic components included in this starter template. Each component is designed
            with minimal styling to make customization easy.
          </p>
        </div>

        <!-- Buttons Section -->
        <section class="showcase__section">
          <h2>Buttons</h2>
          <p>Flexible button component with variants and sizes.</p>

          <div class="showcase__demo">
            <h3>Variants</h3>
            <div class="showcase__group">
              <Button>Primary Button</Button>
              <Button variant="secondary">Secondary Button</Button>
              <Button variant="outline">Outline Button</Button>
              <Button disabled>Disabled Button</Button>
            </div>

            <h3>Sizes</h3>
            <div class="showcase__group">
              <Button size="small">Small</Button>
              <Button size="medium">Medium</Button>
              <Button size="large">Large</Button>
            </div>
          </div>
        </section>

        <!-- Alerts Section -->
        <section class="showcase__section">
          <h2>Alerts</h2>
          <p>Alert messages for different contexts.</p>

          <div class="showcase__demo">
            <Alert type="info">This is an info alert with useful information.</Alert>
            <Alert type="success">Success! Your action was completed successfully.</Alert>
            <Alert type="warning">Warning: Please review your input.</Alert>
            <Alert type="error">Error: Something went wrong.</Alert>
            <Alert type="info" dismissible>This alert can be dismissed by clicking the Ã— button.</Alert>
          </div>
        </section>

        <!-- Form Fields Section -->
        <section class="showcase__section">
          <h2>Form Fields</h2>
          <p>Complete collection of form inputs with labels, validation, and help text.</p>

          <div class="showcase__demo">
            <h3>Text Inputs</h3>
            <FormField
              label="Email Address"
              name="email"
              type="email"
              placeholder="Enter your email"
              required
              helpText="We'll never share your email with anyone else."
            />

            <FormField label="Password" name="password" type="password" placeholder="Enter your password" required />

            <FormField
              label="Phone Number"
              name="phone"
              type="tel"
              placeholder="(555) 123-4567"
              error="Please enter a valid phone number"
            />

            <FormField label="Website URL" name="website" type="url" placeholder="https://example.com" />

            <FormField label="Age" name="age" type="number" placeholder="18" />

            <FormField label="Disabled Field" name="disabled" placeholder="This field is disabled" disabled />

            <h3>Select Dropdowns</h3>
            <Select
              label="Country"
              name="country"
              options={countryOptions}
              placeholder="Choose your country"
              required
              helpText="Select your primary country of residence."
            />

            <Select label="Department" name="department" options={categoryOptions} value="tech" />

            <Select
              label="Skills (Multiple)"
              name="skills"
              options={categoryOptions}
              multiple={true}
              helpText="Hold Ctrl/Cmd to select multiple options."
            />

            <Select
              label="Priority Level"
              name="priority"
              options={[
                { value: "low", label: "Low Priority" },
                { value: "medium", label: "Medium Priority" },
                { value: "high", label: "High Priority" },
                { value: "urgent", label: "Urgent" },
              ]}
              error="Please select a priority level"
            />

            <h3>Textarea</h3>
            <Textarea
              label="Message"
              name="message"
              placeholder="Enter your message here..."
              rows={4}
              required
              helpText="Please provide as much detail as possible."
            />

            <Textarea
              label="Comments"
              name="comments"
              placeholder="Additional comments..."
              rows={3}
              maxlength={500}
              resize="none"
            />

            <Textarea
              label="Description"
              name="description"
              placeholder="Describe your project..."
              error="Description is required and must be at least 50 characters."
              rows={6}
            />

            <h3>Checkboxes</h3>
            <Checkbox
              name="newsletter"
              label="Subscribe to our newsletter"
              helpText="Get updates about new features and releases."
            />

            <Checkbox name="terms" label="I agree to the terms and conditions" required />

            <Checkbox name="marketing" label="Send me marketing emails" checked />

            <Checkbox name="disabled" label="This option is disabled" disabled />

            <Checkbox
              name="error-example"
              label="This checkbox has an error"
              error="You must check this box to continue"
            />

            <h3>Radio Groups</h3>
            <RadioGroup
              name="payment"
              label="Payment Method"
              options={paymentOptions}
              value="credit"
              helpText="Choose your preferred payment method."
            />

            <RadioGroup name="size" label="Size" options={sizeOptions} orientation="horizontal" required />

            <RadioGroup
              name="shipping"
              label="Shipping Options"
              options={[
                { value: "standard", label: "Standard Shipping (5-7 days)" },
                { value: "express", label: "Express Shipping (2-3 days)" },
                { value: "overnight", label: "Overnight Shipping" },
              ]}
              error="Please select a shipping option"
            />
          </div>
        </section>

        <!-- Cards Section -->
        <section class="showcase__section">
          <h2>Cards</h2>
          <p>Flexible card containers with optional header and footer.</p>

          <div class="showcase__demo">
            <div class="cards-grid">
              <Card>
                <h3>Default Card</h3>
                <p>This is a basic card with default styling.</p>
              </Card>

              <Card variant="bordered">
                <Fragment slot="header">
                  <h3>Bordered Card</h3>
                </Fragment>
                <p>This card has a border and a header section.</p>
                <Fragment slot="footer">
                  <Button size="small">Action</Button>
                </Fragment>
              </Card>

              <Card variant="elevated" padding="large">
                <Fragment slot="header">
                  <h3>Elevated Card</h3>
                </Fragment>
                <p>This card has a shadow and larger padding for a more prominent appearance.</p>
                <Fragment slot="footer">
                  <div style="display: flex; gap: 0.5rem;">
                    <Button variant="outline" size="small">Cancel</Button>
                    <Button size="small">Confirm</Button>
                  </div>
                </Fragment>
              </Card>
            </div>
          </div>
        </section>

        <!-- Navigation Section -->
        <!-- <section class="showcase__section">
        <h2>Navigation</h2>
        <p>Horizontal and vertical navigation components.</p>

        <div class="showcase__demo">
          <h3>Horizontal Navigation</h3>
          <Navigation items={navItems} />

          <h3>Vertical Navigation</h3>
          <Navigation items={navItems} orientation="vertical" />
        </div>
      </section> -->

        <!-- Accordion Section -->
        <section class="showcase__section">
          <h2>Accordion</h2>
          <p>Fully accessible accordion component with keyboard navigation and ARIA support.</p>

          <div class="showcase__demo">
            <h3>Default Accordion (Single Open)</h3>
            <Accordion items={accordionItems} />

            <h3>Multiple Open Accordion</h3>
            <Accordion items={faqItems} allowMultiple variant="bordered" />

            <h3>Flush Variant</h3>
            <Accordion items={accordionItems.slice(0, 2)} variant="flush" />
          </div>
        </section>

        <!-- Fifty Fifty Section -->
        <section class="showcase__section">
          <h2>50/50 Layout</h2>
          <p>
            Flexible two-column layout component using your grid utility classes. Perfect for hero sections and feature
            highlights.
          </p>

          <div class="showcase__demo">
            <h3>Image Left (Default)</h3>
            <FiftyFifty
              imageSrc="https://images.unsplash.com/photo-1557804506-669a67965ba0?w=600&h=400&fit=crop&crop=faces"
              imageAlt="Team collaboration"
              title="Build Something Amazing"
              subtitle="Get Started">
              <p>
                Create beautiful, responsive layouts with our flexible 50/50 component. Perfect for showcasing features,
                testimonials, or any content that benefits from a balanced visual hierarchy.
              </p>
              <p>
                The component automatically adapts to your grid system and provides options for image positioning and
                content alignment.
              </p>

              <Fragment slot="actions">
                <Button>Get Started</Button>
                <Button variant="outline">Learn More</Button>
              </Fragment>
            </FiftyFifty>

            <h3>Image Right</h3>
            <FiftyFifty
              imageSrc="https://images.unsplash.com/photo-1460925895917-afdab827c52f?w=600&h=400&fit=crop&crop=center"
              imageAlt="Analytics dashboard"
              imagePosition="right"
              title="Data-Driven Insights"
              subtitle="Analytics"
              alignment="left">
              <p>
                Make informed decisions with comprehensive analytics and reporting. Our dashboard provides real-time
                insights into your most important metrics.
              </p>

              <Fragment slot="actions">
                <Button variant="secondary">View Dashboard</Button>
              </Fragment>
            </FiftyFifty>

            <h3>Centered Content</h3>
            <FiftyFifty
              imageSrc="https://images.unsplash.com/photo-1522202176988-66273c2fd55f?w=600&h=400&fit=crop&crop=faces"
              imageAlt="Customer support team"
              title="24/7 Support"
              subtitle="We're Here to Help"
              alignment="center"
              variant="contained">
              <p>
                Get help whenever you need it with our dedicated support team. We're available around the clock to
                ensure your success.
              </p>

              <Fragment slot="actions">
                <Button>Contact Support</Button>
              </Fragment>
            </FiftyFifty>
          </div>
        </section>

        <!-- Swiper/Carousel -->
        <section class="showcase__section">
          <div class="component-showcase">
            <h3>Swiper/Carousel</h3>

            <div class="example-group">
              <h4>Basic Carousel with Images</h4>
              <Swiper
                slides={sampleSlides}
                slidesPerView={1}
                spaceBetween={20}
                navigation={true}
                pagination={true}
                autoplay={{ delay: 4000 }}
                loop={false}
              />
            </div>

            <div class="example-group">
              <h4>Multi-slide Carousel</h4>
              <Swiper
                slides={sampleSlides}
                slidesPerView={3}
                spaceBetween={30}
                navigation={true}
                pagination={true}
                loop={false}
                breakpoints={{
                  640: { slidesPerView: 1, spaceBetween: 20 },
                  768: { slidesPerView: 2, spaceBetween: 25 },
                  1024: { slidesPerView: 3, spaceBetween: 30 },
                }}
              />
            </div>

            <div class="example-group">
              <h4>Text-only Carousel</h4>
              <Swiper
                slides={textOnlySlides}
                slidesPerView={1}
                spaceBetween={0}
                navigation={true}
                pagination={true}
                centeredSlides={true}
                loop={false}
              />
            </div>

            <div class="example-group">
              <h4>Minimal Carousel (No Navigation)</h4>
              <Swiper
                slides={textOnlySlides}
                slidesPerView={1}
                spaceBetween={20}
                navigation={false}
                pagination={true}
                autoplay={{ delay: 3000 }}
                loop={false}
                breakpoints={{
                  320: { slidesPerView: 1, spaceBetween: 20 },
                  768: { slidesPerView: 1, spaceBetween: 20 },
                  1024: { slidesPerView: 1, spaceBetween: 20 },
                }}
              />
            </div>
          </div>
        </section>

        <!-- Usage Instructions -->
        <section class="showcase__section">
          <h2>Customization Guide</h2>
          <div class="usage-guide">
            <Card variant="bordered">
              <Fragment slot="header">
                <h3>How to Customize Components</h3>
              </Fragment>
              <div class="usage-content">
                <p>Each component is designed with minimal, functional styling that's easy to override:</p>
                <ul>
                  <li><strong>CSS Custom Properties:</strong> Override color and spacing variables</li>
                  <li><strong>Class-based Styling:</strong> Each component uses predictable class names</li>
                  <li><strong>Scoped Styles:</strong> Component styles won't leak to other elements</li>
                  <li><strong>Variant System:</strong> Built-in variants for common use cases</li>
                  <li>
                    <strong>Accessibility First:</strong> All components include ARIA attributes and keyboard navigation
                  </li>
                  <li><strong>Progressive Enhancement:</strong> Components work without JavaScript when possible</li>
                </ul>
                <p>
                  To customize, simply override the component styles in your main stylesheet or create new variant
                  classes. All interactive components include proper focus management and keyboard navigation.
                </p>
              </div>
            </Card>
          </div>
        </section>

        <!-- Dialog Component -->
        <section class="showcase__section">
          <h2>Dialog Component</h2>
          <p>Accessible modal dialogs with focus management, keyboard navigation, and smooth animations.</p>

          <div class="showcase__demo">
            <div class="component-showcase">
              <h3>Basic Dialog Examples</h3>

              <div class="example-group">
                <h4>Standard Dialog</h4>
                <div class="showcase__group">
                  <Button data-dialog-trigger="demo-dialog" variant="primary"> Open Standard Dialog </Button>
                  <Button data-dialog-trigger="alert-dialog" variant="secondary"> Open Alert Dialog </Button>
                  <Button data-dialog-trigger="confirm-dialog" variant="outline"> Open Confirmation Dialog </Button>
                </div>
              </div>

              <div class="example-group">
                <h4>Different Sizes</h4>
                <div class="showcase__group">
                  <Button data-dialog-trigger="small-dialog" variant="outline"> Small Dialog </Button>
                  <Button data-dialog-trigger="medium-dialog" variant="outline"> Medium Dialog </Button>
                  <Button data-dialog-trigger="large-dialog" variant="outline"> Large Dialog </Button>
                  <Button data-dialog-trigger="fullscreen-dialog" variant="outline"> Fullscreen Dialog </Button>
                </div>
              </div>

              <div class="example-group">
                <h4>Form Dialog Example</h4>
                <div class="showcase__group">
                  <Button data-dialog-trigger="form-dialog" variant="primary"> Open Contact Form Dialog </Button>
                </div>
              </div>
            </div>
          </div>

          <!-- Usage Guide -->
          <Card variant="elevated" padding="large">
            <div slot="header">
              <h3>Usage Guide</h3>
            </div>
            <div class="usage-guide">
              <div class="usage-content">
                <p><strong>Accessibility Features:</strong></p>
                <ul>
                  <li>
                    <strong>Focus Management:</strong> Automatically focuses first interactive element and traps focus within
                    dialog
                  </li>
                  <li><strong>Keyboard Navigation:</strong> ESC to close, Tab to cycle through focusable elements</li>
                  <li>
                    <strong>Screen Reader Support:</strong> Proper ARIA roles, labels, and live region announcements
                  </li>
                  <li><strong>Focus Restoration:</strong> Returns focus to triggering element when closed</li>
                  <li><strong>Background Scroll Prevention:</strong> Prevents body scrolling while dialog is open</li>
                </ul>

                <p><strong>Animation Features:</strong></p>
                <ul>
                  <li><strong>Smooth Transitions:</strong> Backdrop fade with blur effect</li>
                  <li><strong>Spring-like Animation:</strong> Dialog scales and slides in with modern easing</li>
                  <li><strong>Reduced Motion Support:</strong> Respects user's motion preferences</li>
                  <li><strong>Progressive Enhancement:</strong> Graceful fallbacks for older browsers</li>
                </ul>

                <p><strong>Basic Usage:</strong></p>
                <ul>
                  <li>Add <code>data-dialog-trigger="dialog-id"</code> to trigger elements</li>
                  <li>Use <code>&lt;Dialog id="dialog-id"&gt;</code> component with matching ID</li>
                  <li>Customize with size, variant, and behavior props</li>
                  <li>Add actions slot for buttons</li>
                </ul>
              </div>
            </div>
          </Card>
        </section>

        <!-- Dialog Components -->
        <Dialog id="demo-dialog" title="Standard Dialog Example" size="medium">
          <p>
            This is a standard dialog with a title and close button. It demonstrates the basic functionality and styling
            of the dialog component.
          </p>
          <p>
            You can include any content here - text, forms, images, or other components. The dialog will automatically
            handle focus management and accessibility.
          </p>

          <Fragment slot="actions">
            <Button data-dialog-close="demo-dialog" variant="outline">Cancel</Button>
            <Button data-dialog-close="demo-dialog" variant="primary">Confirm</Button>
          </Fragment>
        </Dialog>

        <Dialog id="alert-dialog" title="Important Alert" size="small" variant="alert">
          <p>
            <strong>Warning:</strong> This action requires your attention. Please review the information below before proceeding.
          </p>
          <p>This dialog demonstrates the alert variant with warning styling and smaller size.</p>

          <Fragment slot="actions">
            <Button data-dialog-close="alert-dialog" variant="secondary">Understood</Button>
          </Fragment>
        </Dialog>

        <Dialog id="confirm-dialog" title="Confirm Action" size="small" variant="confirmation">
          <p>Are you sure you want to delete this item? This action cannot be undone.</p>

          <Fragment slot="actions">
            <Button data-dialog-close="confirm-dialog" variant="outline">Cancel</Button>
            <Button data-dialog-close="confirm-dialog" variant="secondary">Delete</Button>
          </Fragment>
        </Dialog>

        <Dialog id="small-dialog" title="Small Dialog" size="small">
          <p>This is a small dialog perfect for simple confirmations or alerts.</p>

          <Fragment slot="actions">
            <Button data-dialog-close="small-dialog" variant="primary">OK</Button>
          </Fragment>
        </Dialog>

        <Dialog id="medium-dialog" title="Medium Dialog" size="medium">
          <p>
            This is a medium-sized dialog suitable for most content types including forms, detailed information, or
            settings.
          </p>
          <p>It provides a good balance between content space and screen real estate usage.</p>

          <Fragment slot="actions">
            <Button data-dialog-close="medium-dialog" variant="outline">Cancel</Button>
            <Button data-dialog-close="medium-dialog" variant="primary">Save</Button>
          </Fragment>
        </Dialog>

        <Dialog id="large-dialog" title="Large Dialog" size="large">
          <p>
            This is a large dialog ideal for complex content, detailed forms, or when you need more space for content
            presentation.
          </p>
          <p>It includes all the same accessibility features as other sizes but provides more room for your content.</p>
          <div
            style="height: 400px; background: #f8f9fa; border-radius: 6px; display: flex; align-items: center; justify-content: center; margin: 1rem 0;">
            <p style="color: #666; margin: 0;">Large content area placeholder</p>
          </div>

          <Fragment slot="actions">
            <Button data-dialog-close="large-dialog" variant="outline">Cancel</Button>
            <Button data-dialog-close="large-dialog" variant="primary">Apply</Button>
          </Fragment>
        </Dialog>

        <Dialog id="fullscreen-dialog" title="Fullscreen Dialog" size="fullscreen">
          <p>
            This fullscreen dialog takes up most of the viewport and is perfect for complex interfaces, detailed forms,
            or immersive content experiences.
          </p>
          <div
            style="height: 60vh; background: #f8f9fa; border-radius: 6px; display: flex; align-items: center; justify-content: center; margin: 1rem 0;">
            <div style="text-align: center;">
              <h3 style="margin-bottom: 0.5rem; color: #333;">Fullscreen Content Area</h3>
              <p style="color: #666; margin: 0;">Perfect for complex layouts and detailed interfaces</p>
            </div>
          </div>

          <Fragment slot="actions">
            <Button data-dialog-close="fullscreen-dialog" variant="outline">Cancel</Button>
            <Button data-dialog-close="fullscreen-dialog" variant="primary">Save Changes</Button>
          </Fragment>
        </Dialog>

        <Dialog id="form-dialog" title="Contact Us" size="medium">
          <form id="contact-form">
            <FormField label="Full Name" name="contact-name" required>
              <input type="text" name="contact-name" placeholder="Enter your full name" required autofocus />
            </FormField>

            <FormField label="Email Address" name="contact-email" required>
              <input type="email" name="contact-email" placeholder="Enter your email" required />
            </FormField>

            <FormField label="Subject" name="contact-subject">
              <Select
                name="contact-subject"
                options={[
                  { value: "", label: "Select a subject" },
